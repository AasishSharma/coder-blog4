<!-- Page Header -->
<header class="intro-header" style="background-color: black">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="site-heading">
          <h1>Coder-Blog</h1>
            <hr class="small">
              <span class="subheading">A Blogging Web App by Aasish Sharma</span>
        </div>
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
          <%= form_for Visitor.new do |form| %>
            <div class="row">
              <div class="form-group col-xs-12">
                <%= form.text_field :email, label: false, :placeholder => 'Your email address', :class => "form-control" %>
              </div>
            </div>
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
              <div class="row">
                <div class="form-group col-xs-12">
                  <%= form.submit "Sign up for the newsletter", :class => "submit btn btn-default" %>
                </div>
              </div>
            </div>
          <% end %> 
        </div>
      </div>
    </div>
  </div>
</header>

